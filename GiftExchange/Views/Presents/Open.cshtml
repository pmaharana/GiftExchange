@model GiftExchange.Models.Gift

@{
    ViewBag.Title = "Open";
}

<h2>Open</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Gift</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)



        <div class="form-group">
            @Html.LabelFor(model => model.GiftHint, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.GiftHint, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ColorWrappingPaper, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ColorWrappingPaper, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>

        <div>
            <div>dimensions</div>
            <div>
                @Model.Height x @Model.Width x @Model.Depth
            </div>
            <div>
                Weight
            </div>
            <div>
                @Model.Weight
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsOpened, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.IsOpened, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Open this gift? REALLY?" class="btn btn-default" />

                <div>
                    @Html.ActionLink("Naw I want a different one", "Index", null, new { @class = "btn btn-default" });
                </div>

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
